#######################
## EWL CONFIGURATION ##
#######################
#
# Leave the variable empty or set it to 'auto' to determine its value automatically

CONFIG_TARGET=auto
# Define an output platform:
#	> linux
#	> win32
#	> macos
#	> android

CONFIG_ARCH=auto
# Define a bit architecture:
#	> 32
#	> 64

CONFIG_LIBRARY_FORMAT=separate
# Define shared objects' compiling method:
#	> separate
#	> merge

CONFIG_GLOBAL_LOAD=manual
# Define how to link submodules' libraries:
#	> manual
#	> link
#	> load

CONFIG_UNIX_GRAPH_LIBX11_LOAD=link
CONFIG_UNIX_GRAPH_LIBXRANDR_LOAD=link
CONFIG_FORMS_LIBTIFF_LOAD=load
CONFIG_FORMS_LIBPNG_LOAD=load
CONFIG_FORMS_LIBOGG_LOAD=load
# Define libraries linking method for each submodule in the case when 'manual' for CONFIG_GLOBAL_LOAD was choosen
#	> link
#	> load
